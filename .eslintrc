{
  "ignorePatterns": ["dist/**", "node_modules/**"],
  "env": {
    "es2021": true,
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "prettier"],
  "rules": {
    "semi": ["warn", "never"],
    "no-unused-vars": "warn",
    "quotes": [
      1,
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "no-use-before-define": ["error", { "functions": false, "classes": false, "variables": false }]
  }
}
